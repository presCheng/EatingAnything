<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/includde_cont"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/activity_top" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@drawable/dotted_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:padding="10dp" >

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbarAlwaysDrawHorizontalTrack="false" >

            <LinearLayout
                android:id="@+id/LinearLayout02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img01"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:background="@drawable/list001" />

                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="fill_parent"
                    android:background="#ffffff" />
                <ImageView
                    android:id="@+id/img02"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:background="@drawable/list002" />

                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="fill_parent"
                    android:background="#ffffff" />

                <ImageView
                    android:id="@+id/img03"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:background="@drawable/list003" />

                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="fill_parent"
                    android:background="#ffffff" />

                <ImageView
                    android:id="@+id/img04"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:background="@drawable/list004" />

                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="fill_parent"
                    android:background="#ffffff" />

                <ImageView
                    android:id="@+id/img05"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:background="@drawable/list005" />

  

                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="fill_parent"
                    android:background="#ffffff" />

   
                
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    
    
    <TextView
        android:id="@+id/con_addr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:paddingBottom="5dp"
        />
    <ListView
        android:id="@+id/list_food_total"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

</LinearLayout>