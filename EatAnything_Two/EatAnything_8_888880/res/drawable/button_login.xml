<selector xmlns:Android="http://schemas.android.com/apk/res/android">

    <item Android:state_selected="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#B4CDE6" android:startColor="@color/rg_bg" />
				
            <corners android:radius="10dip" />
        </shape></item>
    <item Android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#B4CDE6" android:startColor="@color/rg_bg" />

            <corners android:radius="10dip" />
        </shape></item>
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/rg_bg" />

            <corners android:radius="10dip" />
        </shape></item>

</selector>